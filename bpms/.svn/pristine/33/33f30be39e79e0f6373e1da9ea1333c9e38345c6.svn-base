<script type="text/javascript">   
$(document).ready(function(){
    
	$('.page-inner').addClass('my-inner');
	$('.nav-myprofile').addClass('mynav-active');
	
    let tabhistory = sessionStorage.getItem('my-seltab');
    let before = sessionStorage.getItem('my-settab');

    $('.'+before+'').removeClass('mynav-active');
    $('.'+tabhistory+'').addClass('mynav-active');

    $('.mypage-nav').click(function(){
        let selecttab = $(this).attr('class').split(" ")[2]
        sessionStorage.setItem('my-seltab',selecttab);

        let befosel = $('.mynav-active').attr('class').split(" ")[2];
        sessionStorage.setItem('my-settab',befosel);
    })
    
    let worklist = $(".work__card");
    let issuelist = $('.issue__card');
    $(".work__nav").addClass('nav__active');

    $('.issue__nav').click(function(){
        $(worklist).hide();
        $(".work__nav").removeClass('nav__active');
        $(issuelist).show();
        $(this).addClass('nav__active');
    })

    $(".work__nav").click(function(){
        $(issuelist).hide();
        $(".issue__nav").removeClass('nav__active');
        $(worklist).show();
        $(this).addClass('nav__active');
    })
})
</script>